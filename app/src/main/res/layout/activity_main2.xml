<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/scheduling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:paddingVertical="40dp"
            android:text="schedule AN APPOINTMENT"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Membership"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scheduling"
            android:background="@color/grey"
            android:paddingVertical="40dp"
            android:text="view Your Profile"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Packages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Membership"
            android:background="@color/grey"
            android:paddingVertical="40dp"
            android:text="View Available Packages"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Trainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Packages"
            android:background="@color/grey"
            android:paddingVertical="40dp"
            android:text="View Available Trainers"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/grey"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        android:text="Your Account needs e-mail verification "
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verbut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/grey"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="Re-Send Verification Code"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="gone">

    </androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>